<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet author="martin_moistus" id="13.11.2023-app_user-table-creation">
        <createTable tableName="app_user">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet  author="martin_moistus"  id="13.11.2023-product-table-creation">
        <createTable tableName="product">
            <column  name="id"  type="INTEGER" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column  name="name"  type="VARCHAR(255)" />
            <column  name="price" type="FLOAT"/>
            <column  name="owner_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_product_person" references="app_user(id)"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="martin_moistus" id="13.11.2023-add-columns-to-product-table">
        <addColumn tableName="product">
            <column name="description" type="TEXT" />
        </addColumn>
    </changeSet>

    <changeSet id=" 18.12.2023-create-picture-table" author="martin_moistus">
        <createTable tableName="picture">
            <column name="id" type="integer" autoIncrement="true">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column name="picture_string" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="18.12.2023-add-foreign-key-to-product-picture" author="martin_moistus">
        <addColumn tableName="product">
            <column name="picture_id" type="integer">
                <constraints nullable="false" foreignKeyName="fk_picture_id" references="picture(id)"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>